<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/icons</item>
        <item name="android:actionBarWidgetTheme">@style/MyActionBarWidgetTheme</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteIconsAndTextColorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="actionMenuTextColor">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

    <style name="MyActionBarWidgetTheme" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">@color/primary_light</item>
    </style>
</resources>
